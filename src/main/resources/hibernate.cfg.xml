<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">testusr</property>
        <property name="hibernate.connection.password">1234567</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/blizzapi_us</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
        <property name="connection.pool_size">1</property>

        <mapping class="apiclasses.wow.community.Spell"/>


    </session-factory>
</hibernate-configuration>